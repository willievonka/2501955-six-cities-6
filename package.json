{
  "name": "six-cities",
  "version": "4.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.rest.js",
    "start:dev": "npm run ts ./src/main.rest.ts | pino-pretty --colorize --translateTime SYS:standard",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "node --loader ts-node/esm",
    "mock:server": "json-server ./mocks/server-data.mock.json --port 3123"
  },
  "devDependencies": {
    "@types/convict": "6.1.6",
    "@types/convict-format-with-validator": "6.0.6",
    "@types/got": "9.6.12",
    "@types/node": "24.10.14",
    "@types/pino": "7.0.4",
    "@typescript-eslint/eslint-plugin": "5.46.0",
    "@typescript-eslint/parser": "5.46.0",
    "eslint": "8.39.0",
    "eslint-config-htmlacademy": "9.1.1",
    "json-server": "0.17.4",
    "pino-pretty": "13.1.3",
    "rimraf": "3.0.2",
    "ts-node": "10.9.1",
    "tslib": "2.8.1",
    "typescript": "5.9.3"
  },
  "type": "module",
  "engines": {
    "node": "^22.0.0",
    "npm": ">=8"
  },
  "dependencies": {
    "@typegoose/typegoose": "13.1.0",
    "chalk": "5.6.2",
    "convict": "6.2.4",
    "convict-format-with-validator": "6.2.0",
    "dayjs": "1.11.19",
    "dotenv": "17.3.1",
    "got": "13.0.0",
    "inversify": "7.11.0",
    "mongoose": "9.1.6",
    "pino": "10.3.1",
    "reflect-metadata": "0.2.2"
  }
}
